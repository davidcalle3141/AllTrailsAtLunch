<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/search_header_title_image"
        android:layout_height="0dp"
        android:layout_width="120dp"
        android:src="@drawable/all_trails_logo"
        app:layout_constraintTop_toTopOf="@id/search_header_sub_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/search_header_sub_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/search_header_sub_title_tv"
        />

    <TextView
        android:id="@+id/search_header_sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:text="@string/logo_sub_text"
        android:textSize="24sp"
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_header_title_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>